#!/bin/bash
HELP_DESC=$(cat << 'EOL'
List of your web monitoring instances at Zabbix filtering by pattern
EOL
)
HELP_ARGS=$(cat << 'EOL'
$1                       Some pattern - if exist will search the word by all your web monitoring instances - emplty will show everything
EOL
)
HELP_EXAMPLES=$(cat << 'EOL'
cld-webchecklist
cld-webchecklist example.com
cld-webchecklist copyright
cld-webchecklist /page/addr
EOL
)
source /var/cld/bin/include/cldfuncs

init-load-constants ZABBIX_USER\|zabbix ZABBIX_PASS\|pAs5w0Rd ZABBIX_SERVER\|zbx.example.com ZABBIX_API\|https://zbx.example.com/api_jsonrpc.php ZABBIX_HOSTGROUPID\|10 ZABBIX_TEMPLATEIDS\|10362,10364,10365

export ZABBIX_TEMPLATEIDS="$(tr ',' '\n' <<< ${ZABBIX_TEMPLATEIDS})"
# Authenticate with Zabbix API
authenticate() {
echo $(curl -k -s -H 'Content-Type: application/json-rpc' -d "{
  \"jsonrpc\": \"2.0\",
  \"method\": \"user.login\",
  \"params\": {
    \"user\": \"${ZABBIX_USER}\",
    \"password\": \"${ZABBIX_PASS}\"
  },
  \"auth\": null,
  \"id\": 0
}" "$ZABBIX_API" | cut -d ':' -f 3 | cut -d ',' -f 1) | tr -d '"'
}

AUTH_TOKEN=$(authenticate)

JSON_ID_REQUEST=$(cat << EOL | jq .
{
    "jsonrpc": "2.0",
    "method": "host.get",
    "params": {
    "selectMacros": "extend"
    },
        "auth": "${AUTH_TOKEN}",
        "id": 1
}
EOL
)

# curl -k -s -H 'Content-Type: application/json-rpc' -d "${JSON_ID_REQUEST}" "$ZABBIX_API" | jq '.result[] | select(.name|test("^check.")) | [.name,.macros[].value]' | tr -d '\n' | sed 's#\]\[#\n#g' | tr -d '['']''"'',' | awk '{print "`"$2" "$3" "$4"`"}'
curl -k -s -H 'Content-Type: application/json-rpc' -d "${JSON_ID_REQUEST}" "$ZABBIX_API" | jq '.result[] | select(.name|test("^check.")) | [.name,.macros[].value]' | tr -d '\n' | sed -e 's#check ##g' -e 's#\]\[#\n\n\n#g' | tr ',' '\n' | tr -d '"''['']' | grep -A2 -B2 "$1" | awk '{print $1}' | grep -v '^--' | tr '\n' '^' | sed 's#\^\^\^#^^#g' | sed 's#\^\^\^#^^#g' | tr '^' '\n' #| awk -v f="$F" -v b="$B" '{print f$0f}'